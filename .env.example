# Cohen House Concierge - Environment Variables
# Copy this file to .env and fill in your API keys

# Required for Solomon AI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional - For enhanced features
ELEVENLABS_API_KEY=your-elevenlabs-api-key
SERPAPI_KEY=your-serpapi-key

# Optional - Email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
FROM_EMAIL=concierge@cohenhouse.it

# Optional - Face recognition
AZURE_FACE_KEY=your-azure-face-api-key
AZURE_FACE_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# Optional - Actions API
COHEN_ACTIONS_API_KEY=your-secure-api-key
BOOKING_API_KEY=sk_booking_secret_2025
